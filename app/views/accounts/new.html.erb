<% provide :title, t("layouts.header.register") %>
<section class="row-accounts">
  <div class="col-8 offset-2 mt-4">
    <div class="card">
      <div class="card-header">
        <h1 class="h1_edit"> <%= t(".register") %> </h1>
      </div>
      <div class="card-body">
        <div class="form-group">
          <%= form_for(@account) do |f| %>
            <%= render "shared/error_messages" %>
            <div class="mb-3">
              <%= f.label :fullname, t("accounts.fullname") %>
              <%= f.text_field :fullname, placeholder:t("accounts.fullname"), class:"form-control mt-4 is-valid" %>
              <div class="valid-feedback">
                <%= t("alert_form.full_name") %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :email, t("accounts.email") %>
              <%= f.email_field :email, placeholder:t("accounts.email_@"), class:"form-control mt-4  is-valid" %>
              <div class="valid-feedback">
                <%= t("alert_form.email_empty") %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :password, t("accounts.password") %>
              <%= f.password_field :password, placeholder:t("accounts.password"), class:"form-control mt-4 is-valid" %>
              <div class="valid-feedback">
                <%= t("alert_form.password_empty") %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation, t("accounts.password_confirmation") %>
              <%= f.password_field :password_confirmation,placeholder:t("accounts.password_confirmation"), class:"form-control mt-4 is-valid" %>
              <div class="valid-feedback">
                <%= t("alert_form.password_same") %>
              </div>
            </div>
            <div class="card-footer text-muted">
              <%= f.submit t("accounts.create_account"), class: "btn btn-success mt-4 width_edit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
